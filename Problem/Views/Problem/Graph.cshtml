
@{
    ViewBag.Title = "Graph";
}

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">月度问题统计</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="container" style="width: 550px; height: 400px; margin: 0 auto"></div>
                    </div>
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
        </div>
        
        <div class="row">
            <!-- /.col-md-6 -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">月度完成率折线图</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="container2" style="width: 550px; height: 400px; margin: 0 auto"></div>
                    </div>
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content -->



<script>


    $(document).ready(function () {
        var myChart = echarts.init(document.getElementById('container2'));

        // 指定图表的配置项和数据
        option = {
            xAxis: {
                type: 'category',
                data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
            },
            yAxis: {
                type: 'value'
            },
            series: [{
                data: [@Html.Raw(ViewBag.line)],
                type: 'line'
            }]
        };

        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);

    });

    $(document).ready(function () {
        var myChart = echarts.init(document.getElementById('container'));

        // 指定图表的配置项和数据
        option = {
        tooltip: {
            trigger: 'axis',
            axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
            }
        },
        legend: {
            data: ['SW', 'SB', 'AB']
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '3%',
            containLabel: true
        },
        xAxis: [
            {
                type: 'category',
                data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
            }
        ],
        yAxis: [
            {
                type: 'value'
            }
        ],
        series: [
            {
                name: 'SW',
                type: 'bar',
                data: [@Html.Raw(ViewBag.SWdata)]
            },
            {
                name: 'SB',
                type: 'bar',
                data: [@Html.Raw(ViewBag.SBdata)]
            },
            {
                name: 'AB',
                type: 'bar',
                data: [@Html.Raw(ViewBag.ABdata)]
            }
        ]
    };

        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);

    });





</script>